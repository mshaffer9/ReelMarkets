<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@drawable/pollbutton"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/poll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="PollName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.71"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/coin"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/money_bet"
                android:layout_width="101dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/poll_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Money Bet"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="30dp"
                android:layout_height="10dp"
                app:srcCompat="@drawable/ellipse"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/timeleft"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="0.71"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/greytimeleft" />

                <TextView
                    android:id="@+id/tvTimeLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/timeleft"
                    android:layout_alignLeft="@+id/timeleft"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/timeleft"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="0.71"
                    android:gravity="center"
                    android:text="Hello"
                    android:textColor="#000000" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>