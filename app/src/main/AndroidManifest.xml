<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmdev.reelmarkets">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.RegisterActivity" />
        <activity android:name=".controller.HomeActivity" />
        <activity android:name=".controller.UserProfileActivity" />
        <activity android:name=".controller.UserListActivity" />
        <activity
            android:name=".controller.ShowPageActivity"
            android:label="@string/title_activity_show_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".controller.PollCreationActivity" />
        <activity android:name=".controller.PollActivity"></activity>
    </application>

</manifest>